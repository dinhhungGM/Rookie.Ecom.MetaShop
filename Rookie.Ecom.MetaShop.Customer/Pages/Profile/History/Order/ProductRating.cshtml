@page "{id}"
@model Rookie.Ecom.MetaShop.Customer.Pages.Profile.History.Order.ProductRatingModel
@{
    Guid id = Guid.Parse(RouteData.Values["id"].ToString());
}

<div class="container d-flex justify-content-center">
    <div class="card mt-5 pb-5">
        <form asp-page="/Profile/History/Order/ProductRating" method="post" asp-route-id="@id">
            <div class="d-flex flex-row justify-content-between p-3 adiv text-white"> <i class="fas fa-chevron-left"></i> <span class="pb-3">feedback</span> <i class="fas fa-times"></i> </div>
            <div class="mt-2 p-4 text-center">
                <div class="form-group mt-4">
                    <div class="sq align-self-center form-group mt-4">
                        <img class="img-fluid my-auto align-self-center mr-2 mr-md-4 pl-0 p-0 m-0" src="@Model.ProductRating.OrderItem.Product.ProductPictures[0].PictureUrl" width="100" height="100" />
                        <p class="mt-3">@Model.ProductRating.OrderItem.Product.Name</p>
                    </div>
                </div>
                <h6 class="mb-0">Your feedback help us to improve.</h6> <small class="px-3">Please let us know about your chat experience.</small>
                <br />
                <input type="range" value="5" step="0.5" id="backing5" name="Rating">
                <div class="rateit" data-rateit-backingfld="#backing5" data-rateit-resetable="false" data-rateit-ispreset="true"
                     data-rateit-min="0" data-rateit-max="5">
                </div>
                <div class="form-group mt-4"> <textarea class="form-control" rows="4" placeholder="Message" name="Comment"></textarea> </div>

                <p class="mt-3">Continue without sending feedback</p>

                <div class="mt-2">  <button class="mt-2 btn btn-primary btn-block" type="submit"><span>Send feedback</span></button> </div>
            </div>
        </form>
    </div>
</div>



<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.4/dist/sweetalert2.all.min.js" integrity="sha256-COxwIctJg+4YcOK90L6sFf84Z18G3tTmqfK98vtnz2Q=" crossorigin="anonymous"></script>
<script>

    const msg = '@TempData["AlertMessage"]';
    if(msg)
    {
        Swal.fire({
          position: 'center',
          icon: 'success',
          title: msg,
          showConfirmButton: false,
          timer: 1500
        })
    }
</script>