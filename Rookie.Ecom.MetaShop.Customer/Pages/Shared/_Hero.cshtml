@model IndexModel
<!-- Hero Section Begin -->
@{
    var categories = Model.Categories;
}



<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="hero__categories">
                    <div class="hero__categories__all">
                        <i class="fa fa-bars"></i>
                        <span>All Categories</span>
                    </div>
                    <ul>
                        @foreach (var item in categories)
                        {
                            <li>
                                <a asp-page="/Home/Index"
                               asp-route-categoryId="@item.Id" asp-route-searchString="@Model.CurrentFilter"
                               asp-route-pageIndex="@Model.CurrentPage">@item.Name</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form">
                        <form method="get" asp-route-pageIndex="@Model.CurrentPage" asp-route-categoryId="@Model.SelectedCategoryId">
                            <input type="text" placeholder="What do you need?" name="searchString">
                            <button type="submit" class="site-btn">SEARCH</button>
                        </form>


                    </div>
                    <div class="hero__search__phone">
                        <div class="hero__search__phone__icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="hero__search__phone__text">
                            <h5>+65 11.188.888</h5>
                            <span>support 24/7 time</span>
                        </div>
                    </div>
                </div>
